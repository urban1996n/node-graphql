{
    "name": "node-graphql",
    "private": true,
    "workspaces": ["apps/*"],
    "version": "1.0.0",
    "description": "Support ticketing system for commonly used ticketing services",
    "main": "index.js",
    "scripts": {
        "dev": "npm-run-all -p dev:*",
        "dev:client": "npm --workspace apps/client run dev",
        "dev:server": "npm --workspace apps/server run dev",
        "build": "npm-run-all build:*",
        "build:shared": "npm --workspace apps/shared run build",
        "build:client": "npm --workspace apps/client run build",
        "build:server": "npm --workspace apps/server run build",
        "start": "npm --workspace apps/server run start"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/come-it/node-graphql.git"
    },
    "author": "Come IT",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/come-it/node-graphql/issues"
    },
    "homepage": "https://github.com/come-it/node-graphql#readme",
    "dependencies": {
        "express": "^5.1.0",
        "jest": "^30.0.0",
        "next": "^15.3.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "typescript": "^5.5.0",
        "vite": "^7.1.3"
    }
}
